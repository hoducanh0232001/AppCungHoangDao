<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_act_splash_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop">
    </ImageView>
    <TextView
        android:id="@+id/tv_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowDx="15"
        android:shadowDy="15"
        android:shadowColor="@color/colorAccent"
        android:shadowRadius="10"
        android:text="Welcome to\n12 signs of the zodiac"
        android:textSize="45dp"
        android:fontFamily="@font/utm_flamenco"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toTopOf="@id/iv_01"
        app:layout_constraintEnd_toEndOf="@id/iv_01"
        app:layout_constraintBottom_toBottomOf="@id/iv_01"
        app:layout_constraintStart_toStartOf="@id/iv_01"
        android:gravity="center"
        >

    </TextView>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_bocap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>